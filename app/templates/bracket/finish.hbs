<div class="bracket">
  {{#each allRounds as |round|}}
    <div class="column">
      {{#each round as |team|}}
        <div class="bracket-team">
          <span>
            {{team.name}}
            {{#each team.colors as |color|}}
              <ColorSwatch @color={{color}} />
            {{/each}}
          </span>
        </div>
      {{/each}}
    </div>
  {{/each}}
</div>